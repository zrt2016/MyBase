<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <layer-list>
            <item android:left="-6dp" android:right="-6dp" android:top="-6dp">
                <shape>
                    <solid android:color="@color/transparent" />
                    <stroke android:width="5dp" android:color="@android:color/holo_blue_light" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item>
        <layer-list>
            <item android:left="-2dp" android:right="-2dp" android:top="-2dp">
                <shape>
                    <solid android:color="@color/transparent" />
                    <stroke android:width="1dp" android:color="@android:color/holo_blue_light" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>

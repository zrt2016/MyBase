<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".animator.demo.PathAnimationActivity">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="10dp">
        <Button
            android:id="@+id/a_p_a_menu"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="right|bottom"
            android:background="@mipmap/menu"/>
        <Button
            android:id="@+id/a_p_a_menu_item1"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_gravity="right|bottom"
            android:background="@mipmap/circle1"
            android:visibility="gone"/>
        <Button
            android:id="@+id/a_p_a_menu_item2"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_gravity="right|bottom"
            android:background="@mipmap/circle2"
            android:visibility="gone"/>
        <Button
            android:id="@+id/a_p_a_menu_item3"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_gravity="right|bottom"
            android:background="@mipmap/circle3"
            android:visibility="gone"/>
        <Button
            android:id="@+id/a_p_a_menu_item4"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_gravity="right|bottom"
            android:background="@mipmap/circle4"
            android:visibility="gone"/>
        <Button
            android:id="@+id/a_p_a_menu_item5"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_gravity="right|bottom"
            android:background="@mipmap/circle5"
            android:visibility="gone"/>
    </FrameLayout>
</RelativeLayout>
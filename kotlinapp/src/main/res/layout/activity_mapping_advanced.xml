<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity_view.custom_view_basic.view_basic.MappingAdvancedActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <com.zrt.kotlinapp.activity_view.custom_view_basic.paint_basic.PaintShadowLayerView
                android:id="@+id/a_p_b_psl_view"
                android:layout_width="match_parent"
                android:layout_height="300dp"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/orange"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView 使用XML添加阴影效果"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:shadowRadius="2"
                android:shadowDx="10"
                android:shadowDy="10"
                android:shadowColor="@color/red"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/orange"/>
        </LinearLayout>
    </ScrollView>
</FrameLayout>
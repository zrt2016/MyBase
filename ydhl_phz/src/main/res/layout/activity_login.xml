    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="35dip"
        android:layout_marginRight="35dip"
        android:layout_marginTop="10dp"
        android:background="#00ffffff"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/a_l_icon_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:scaleType="centerInside"
            android:src="@mipmap/icon_password" />
        <EditText
            android:id="@+id/a_l_userpassword_edit"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="15dp"
            android:layout_weight="1.0"
            android:hint="@string/activity_login_password_hint"
            android:inputType="textPassword"
            android:background="@null"
            android:drawableBottom="@drawable/bg_edittext_underline"
            android:paddingLeft="10dp"
            android:singleLine="true"
            android:textColor="#ff60606c"
            android:textColorHint="#ffc8c8ce"

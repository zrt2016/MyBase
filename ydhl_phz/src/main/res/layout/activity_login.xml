<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".ui.login.LoginActivity">
    <ImageView
        android:id="@+id/a_l_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="30dp"
        android:layout_marginLeft="20.0dip"
        android:layout_marginRight="20.0dip"
        android:src="@mipmap/logo" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="35dip"
        android:layout_marginRight="35dip"
        android:background="#00ffffff"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/a_l_icon_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:scaleType="centerInside"
            android:src="@mipmap/icon_user" />
        <EditText
            android:id="@+id/a_l_username_edit"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="15dp"
            android:layout_weight="1.0"
            android:hint="@string/activity_login_username_hint"
            android:background="@null"
            android:drawableBottom="@drawable/bg_edittext_underline"
            android:paddingLeft="10dp"
            android:singleLine="true"
            android:textColor="#ff60606c"
            android:textColorHint="#ffc8c8ce"
            android:textSize="16sp" />


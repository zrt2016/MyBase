<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:stretchColumns="0,1,2,3"
    android:layout_gravity="bottom"
    android:background="@color/colorWhite"
    tools:context=".activity.jisuanqi.CalculatorActivity">

    <EditText
        android:id="@+id/editText2"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:text=""
        android:textSize="24sp"
        android:gravity="right"
        android:textColor="@color/colorGray"
        android:background="@color/colorWhite"
        android:paddingRight="36dp"
        android:focusable="false"
        android:editable="false"/>  <!--设置文本框不可编辑-->

    <EditText
        android:id="@+id/editText1"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:text="0"
        android:textSize="48sp"
        android:gravity="right"
        android:maxLength="12"
        android:background="@color/colorWhite"
        android:paddingRight="36dp"
        android:focusable="false"
        android:editable="false"/>  <!--设置文本框不可编辑-->

    <TableRow>
        <Button
            android:id="@+id/all_clear"
            android:text="AC"
            android:background="@color/colorWhite"
            android:textColor="@color/colorOrange"
            android:textSize="24sp"
            />

        <Button
            android:id="@+id/delete"
            android:background="@color/colorWhite"
            android:drawableLeft="@mipmap/backspace2"
            android:paddingLeft="32dp"
            />

        <Button
            android:id="@+id/percent"
            android:text="%"
            android:background="@color/colorWhite"
            android:textColor="@color/colorOrange"
            android:textSize="24sp"
            />
        <Button
            android:id="@+id/division"
            android:text="÷"
            android:background="@color/colorWhite"
            android:textColor="@color/colorOrange"
            android:textSize="24sp"
            />
    </TableRow>

    <TableRow>
        <Button
            android:id="@+id/but_7"
            android:text="7"
            android:background="@color/colorWhite"
            android:textColor="@color/colorBlack"
            android:textSize="24sp"/>
        <Button
            android:id="@+id/but_8"
            android:text="8"
            android:background="@color/colorWhite"
            android:textColor="@color/colorBlack"
            android:textSize="24sp"/>
        <Button
            android:id="@+id/but_9"
            android:text="9"
            android:background="@color/colorWhite"
            android:textColor="@color/colorBlack"
            android:textSize="24sp"/>
        <Button
            android:id="@+id/multiplication"
            android:text="×"
            android:background="@color/colorWhite"
            android:textColor="@color/colorOrange"
            android:textSize="24sp"/>
    </TableRow>

    <TableRow>
        <Button
            android:id="@+id/but_4"
            android:text="4"
            android:background="@color/colorWhite"
            android:textColor="@color/colorBlack"
            android:textSize="24sp"/>
        <Button
            android:id="@+id/but_5"
            android:text="5"
            android:background="@color/colorWhite"
            android:textColor="@color/colorBlack"
            android:textSize="24sp"/>
        <Button
            android:id="@+id/but_6"
            android:text="6"
            android:background="@color/colorWhite"
            android:textColor="@color/colorBlack"
            android:textSize="24sp"/>
        <Button
            android:id="@+id/subtraction"
            android:text="－"
            android:background="@color/colorWhite"
            android:textColor="@color/colorOrange"
            android:textSize="24sp"/>
    </TableRow>

    <TableRow>
        <Button
            android:id="@+id/but_1"
            android:text="1"
            android:background="@color/colorWhite"
            android:textColor="@color/colorBlack"
            android:textSize="24sp"/>
        <Button
            android:id="@+id/but_2"
            android:text="2"
            android:background="@color/colorWhite"
            android:textColor="@color/colorBlack"
            android:textSize="24sp"/>
        <Button
            android:id="@+id/but_3"
            android:text="3"
            android:background="@color/colorWhite"
            android:textColor="@color/colorBlack"
            android:textSize="24sp"/>
        <Button
            android:id="@+id/addition"
            android:text="＋"
            android:background="@color/colorWhite"
            android:textColor="@color/colorOrange"
            android:textSize="24sp"/>
    </TableRow>

    <TableRow android:layout_height="48dp">

        <Button
            android:id="@+id/convert"
            android:background="@color/colorWhite"
            android:drawableLeft="@mipmap/turn"
            android:paddingLeft="27dp" />

        <Button
            android:id="@+id/but_0"
            android:background="@color/colorWhite"
            android:text="0"
            android:textColor="@color/colorBlack"
            android:textSize="24sp" />

        <Button
            android:id="@+id/point"
            android:background="@color/colorWhite"
            android:text="."
            android:textColor="@color/colorBlack"
            android:textSize="24sp" />

        <Button
            android:id="@+id/equal"
            android:background="@color/colorWhite"
            android:drawableLeft="@mipmap/equal"
            android:paddingLeft="28dp" />
    </TableRow>


</TableLayout>